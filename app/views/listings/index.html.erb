<div class="jumbotron">
  <h1>Selected Friends from around the World</h1>
  <h2>Discover TOP Friends of the week</h2>
</div>


<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>  
  </div> 
</div> 

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link"  %>
<% end %>
